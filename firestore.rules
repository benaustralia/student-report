rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is admin by email
    function isAdmin() {
      return request.auth != null && 
        exists(/databases/$(database)/documents/adminUsers/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/adminUsers/$(request.auth.uid)).data.isAdmin == true;
    }
    
    // Alternative admin check by email (if UID doesn't match)
    function isAdminByEmail() {
      return request.auth != null && 
        request.auth.token.email in ['bahinton@gmail.com', 'yoc31397@gmail.com'];
    }
    
    // Whitelisted users collection - allow bahinton@gmail.com full access during setup
    match /whitelistedUsers/{userId} {
      allow read, write: if request.auth != null && request.auth.token.email == 'bahinton@gmail.com';
    }
    
    // Reports collection - users can only access reports for classes they teach, admins can access all
    match /reports/{reportId} {
      allow read, write: if request.auth != null && (
        request.auth.token.email == resource.data.teacherEmail ||
        isAdmin() || isAdminByEmail()
      );
      // Allow creation if user is admin OR if the report's teacherEmail matches a class they teach
      allow create: if request.auth != null && (
        isAdmin() || isAdminByEmail() ||
        request.auth.token.email == request.resource.data.teacherEmail
      );
    }
    
    // Classes collection - users can only access their own classes, admins can access all
    match /classes/{classId} {
      allow read: if request.auth != null && (
        request.auth.token.email == resource.data.teacherEmail ||
        isAdmin() || isAdminByEmail()
      );
      allow write: if request.auth != null && (
        request.auth.token.email == resource.data.teacherEmail ||
        isAdmin() || isAdminByEmail()
      );
      allow create: if request.auth != null && 
        request.auth.token.email == request.resource.data.teacherEmail;
    }
    
    // Students collection - authenticated users can access all students
    match /students/{studentId} {
      allow read, write: if request.auth != null;
    }
    
    // Admin users collection - allow authenticated users to read for admin checks, but only admins can write
    match /adminUsers/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && (
        request.auth.token.email == 'bahinton@gmail.com' ||
        isAdmin() || isAdminByEmail()
      );
    }
    
    // Teachers collection - authenticated users can read, admins can write
    match /teachers/{teacherId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && (
        request.auth.token.email == 'bahinton@gmail.com' ||
        isAdmin() || isAdminByEmail()
      );
    }
  }
}
